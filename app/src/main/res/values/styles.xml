<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">#F06292</item>
        <item name="fab_colorPressed">#F48FB1</item>
        <item name="fab_colorRipple">#F8BBD0</item>
    </style>

    <style name="MenuButtonsSmall.Green">
        <item name="fab_colorNormal">#F06292</item>
        <item name="fab_colorPressed">#F48FB1</item>
        <item name="fab_colorRipple">#F8BBD0</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#F06292</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
